<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinguagensActivity">

    <EditText
        android:id="@+id/txtNome_linguagem"
        android:hint="nome"
        style="@style/TextoRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtDescricao_linguagem"
        android:hint="descricao"
        style="@style/TextoRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/chbFavorito_linguagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoRegular"
        android:text="Favorito" />

    <Spinner
        android:id="@+id/spiNota_linguagem"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnExcluir_linguagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Excluir" />

</LinearLayout>